{
    "manifest_version": 3,
    "name": "ShortVanish",
    "description": "Hide Youtube Shorts, Instagram Reels, TikTok video from now on",
    "version": "0.1.0",
    "author": "Patryk Ostern",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "icons": {
        "16": "icons/SV-16.png",
        "32": "icons/SV-32.png",
        "48": "icons/SV-48.png",
        "128": "icons/SV-128.png"
      },
    "action": {
        "default_icon": {
            "16": "icons/SV-16.png",
            "32": "icons/SV-32.png",
            "48": "icons/SV-48.png",
            "128": "icons/SV-128.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["scripts/contentScript.js"],
          "run_at": "document_idle"
        }
    ]
}