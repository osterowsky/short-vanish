{
    "manifest_version": 3,
    "name": "ShortVanish",
    "description": "Hide Youtube Shorts & Instagram Reels to retire your mother",
    "version": "0.1.0",
    "author": "Patryk Ostern",
    "permissions": ["tabs", "activeTab"],
    "host_permissions": [
        "*://*.instagram.com/*",
        "*://*.youtube.com/*"    
    ],
    "background": {
        "service_worker": "background.js"
      },
    "icons": {
        "16": "icons/SV-16.png",
        "32": "icons/SV-32.png",
        "48": "icons/SV-48.png",
        "128": "icons/SV-128.png"
      },
    "action": {
        "default_icon": {
            "16": "icons/SV-16.png",
            "32": "icons/SV-32.png",
            "48": "icons/SV-48.png",
            "128": "icons/SV-128.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["*://*.instagram.com/*"],
          "js": ["scripts/instagram.js"]        
        }, {
          "matches": ["*://*.youtube.com/*"],
          "js": ["scripts/youtube.js"]
        }
    ]
}