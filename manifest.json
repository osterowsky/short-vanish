{
    "manifest_version": 3,
    "name": "ShortVanish",
    "description": "Hide Youtube Shorts, Instagram Reels, TikTok video from now on",
    "version": "0.1.0",
    "author": "Patryk Ostern",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "icons": {
        "16": "icons/.png",
        "32": "icons/.png",
        "48": "icons/.png",
        "128": "icons/.png"
      },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/.png",
            "32": "icons/.png",
            "48": "icons/.png",
            "128": "icons/.png"
        }
    },
    "background": {
        "service_worker": "scripts/.js"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["scripts/.js"],
          "run_at": "document_idle"
        }
    ]
}